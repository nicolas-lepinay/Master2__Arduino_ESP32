#include "EquipmentManager.h"
#include "MQTTManager.h"

// üì° Configuration WiFi
const char* WIFI_SSID = "nicolas";
const char* WIFI_PASSWORD = "abcd1234";

// üîÑ Timer pour les donn√©es p√©riodiques
unsigned long lastUpdate = 0;
const unsigned long interval = 60000; // 1 minute

// ‚öôÔ∏è Setup
void setup() {
    Serial.begin(115200);
    WiFi.begin(WIFI_SSID, WIFI_PASSWORD);

    while (WiFi.status() != WL_CONNECTED) {
        Serial.println("Connexion au WiFi...");
        delay(1000);
    }
    Serial.println("Connect√© au WiFi.");

    setupEquipments();
    setupMQTT();
}

// üîÑ Loop
void loop() {
    if (!client.connected()) {
        mqttReconnect();
    }
    client.loop();

    if (millis() - lastUpdate >= interval) {
        lastUpdate = millis();
        publishData(); // Publications des donn√©es des capteurs sur MQTT
    }
}
